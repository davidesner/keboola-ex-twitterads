{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Twitter Ads extractor config",
	"type": "object",
	"properties": {
		"accountNames": {
		"propertyOrder": 5000,
			"type": "array",
			"title": "Twitter account names",
			"uniqueItems": true,
			"format": "table",
			"description": "Twitter account names as found in Twitter UI",
			"items": {				
				"title": "Account name",
				"type": "string"
			}
		},
		"since": {
			"propertyOrder": 6000,
			"title": "Changed since",
			"description": "Loads data changed since. Date in format yyyy-mm-dd",
			"type": "string"
		},
		"entityType": {
			"propertyOrder": 7000,
			"title": "Twitter Entity Type",
			"description": "Entity type specifiing the granularity of performance data.",
			"type": "string",
			"enum": [
				"CAMPAIGN",
				"LINE_ITEM"
			],
			"default": "CAMPAIGN",
			"options": {
				"enum_titles": [
					"Campaign",
					"Line item"
				]
			}
		},
		"granularity": {
			"propertyOrder": 8000,
			"title": "Granularity",
			"description": "Metric granularity.",
			"type": "string",
			"enum": [
				"HOUR",
				"DAY"
			],
			"default": "HOUR",
			"options": {
				"enum_titles": [
					"Hour",
					"Day"
				]
			}
		},
		"includeDeleted": {
			"propertyOrder": 9000,
			"title": "Include deleted entities",
			"type": "boolean",
			"description": "Retrieve deleted entities also",
			"default": false
		},
		"entityDatasets": {
			"propertyOrder": 10000,
			"title": "Entity datasets to download",
			"description": "Sepcifies entity datasets to be downloaded",
			"type": "array",
			"format": "checkbox",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"propertyOrder": 2000,
				"enum": [
					"CAMPAIGN",
					"LINE_ITEM",
					"ACCOUNT"
				],
				"default": "CAMPAIGN",
				"options": {
					"enum_titles": [
						"Campaign",
						"LineItem",
						"Account"
					]
				}
			}
		},
		"incremental": {
			"propertyOrder": 11000,
			"title": "Storage upload mode",
			"description": "Incremental upload will append data to existing tables. Full upload will replace the contents of target table.",
			"type": "number",
			"enum": [
				0,
				1
			],
			"default": 1,
			"options": {
				"enum_titles": [
					"Full",
					"Incremental"
				]
			}
		},
		"sinceLast": {
			"propertyOrder": 11000,
			"title": "Data since last run",
			"description": "Determines whether the component should retrieve only data changed since the last run on each consecutive run.",
			"type": "number",
			"enum": [
				0,
				1
			],
			"default": 1,
			"options": {
				"enum_titles": [
					"No",
					"Yes"
				]
			}
		}
	},
	"required": [	
		"accountNames",
		"since",
		"entityType",
		"granularity",
		"includeDeleted",
		"entityDatasets",
		"incremental",
		"sinceLast"
	]
}
